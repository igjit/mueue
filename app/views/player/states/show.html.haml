%h1 Player

%h2 Now Playing
- if @video
  %div= image_tag @video.thumbnail_url, alt: @video.title
  %div= @video.title
  %div
    in playlist
    = link_to @playlist.title, @playlist.watch_url
- else
  (stopped)

%h2 Control
= link_to 'play', player_state_path(format: :json, state: { play_state: 'play' }), method: :put, remote: true, class: 'btn btn-default js-player-play'
= link_to 'stop', player_state_path(format: :json, state: { play_state: 'stop' }), method: :put, remote: true, class: 'btn btn-default js-player-stop'

= range_field_tag 'player-volume', @volume, min: 0, max: 255, class: 'js-player-volume'
